{% extends 'homepage.html.twig' %}

{% block title %}Connexion Ã  Hero Maker{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-4">Formulaire de connexion</h1>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success mt-4">
                {{ message }}
            </div>       
        {% endfor %}


        {% if error %}
            <div class="alert alert-dismissible alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        <form action="{{ path('security.login') }}" method="post">
            <div class="form-group">
                <label for="username" class="form-label mt-4">Username</label>
                <input type="username" class="form-control" id="username" name="_username" placeholder="Username" value="{{ last_username }}">
            </div>
            <div class="form-group">
                <label for="password" class="form-label mt-4">Password</label>
                <input type="password" class="form-control" id="password" name="_password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary mt-4">
                Se connecter
            </button>
        </form>
    </div>

{% endblock %}
