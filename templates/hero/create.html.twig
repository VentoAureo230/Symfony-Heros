{% extends 'homepage.html.twig' %}

{% form_theme formHero 'bootstrap_4_layout.html.twig' %}

{% block title %}Creation d'un heros
{% endblock %}

{% block body %}

	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Création d'un héros</h1>

		{{ form_start(formHero) }}

		{{ form_widget(formHero) }}

		<button type="submit" class="btn btn-success">
			{% if editMode %}
				Enregistrer les modifications
			{% else %}
				Créer le héros
			{% endif %}
		</button>

		{{ form_end(formHero) }}
	</div>
{% endblock %}
